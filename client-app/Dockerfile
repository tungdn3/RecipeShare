FROM node:latest AS build-stage
ARG QUASAR_GATEWAY_BASE_URL="http://localhost:7000"
ARG QUASAR_AUTH0_DOMAIN
ARG QUASAR_AUTH0_CLIENT_ID
ARG QUASAR_AUTH0_AUDIENCE
ENV QUASAR_GATEWAY_BASE_URL=$QUASAR_GATEWAY_BASE_URL
ENV QUASAR_AUTH0_DOMAIN=$QUASAR_AUTH0_DOMAIN
ENV QUASAR_AUTH0_CLIENT_ID=$QUASAR_AUTH0_CLIENT_ID
ENV QUASAR_AUTH0_AUDIENCE=$QUASAR_AUTH0_AUDIENCE
WORKDIR /app
COPY package*.json ./
RUN npm install
COPY ./ .
RUN npm run build

FROM nginx AS production-stage
RUN mkdir /app
COPY --from=build-stage /app/dist /app
COPY nginx.conf /etc/nginx/nginx.conf
